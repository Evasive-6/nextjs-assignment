# Environment Variables Template - Copy this for each environment
# Replace values according to your target environment

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgres://user:password@localhost:5432/dbname

# API Keys and Secrets - NEVER commit real values
# Store actual secrets in GitHub Secrets or cloud key vaults
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
JWT_SECRET=your-jwt-secret-key

# Feature Flags
NEXT_PUBLIC_FEATURE_BETA=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
